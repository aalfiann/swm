{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "id": "com.example.twa",
  "dir": "ltr",
  "lang": "en",
  "scope": "/",
  "start_url": "https://yourdomain.com/",
  "name": "SiteName",
  "short_name": "SiteName",
  "description": "Description of your web app.",
  "categories": [
    "productivity",
    "utilities",
    "news",
    "lifestyle",
    "social"
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Home",
      "url": "/",
      "description": "Home page."
    },
    {
      "name": "Blog",
      "url": "/blog",
      "description": "Read all our posts."
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display": "standalone",
  "display_override": [
    "window-controls-overlay"
  ],
  "edge_side_panel": {
    "preferred_width": 414
  },
  "orientation": "natural",
  "background_color": "#f5f5f5",
  "theme_color": "#f5f5f5"
}
